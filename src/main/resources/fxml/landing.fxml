                    <Label text="Communication Without Barriers" styleClass="page-title"/>
                    <Label text="An interactive platform designed to make sign language learning accessible and engaging for everyone. Join thousands of learners worldwide and start your journey to meaningful communication."
                           styleClass="subtitle" wrapText="true" textAlignment="CENTER"/>
                </VBox>

                <GridPane alignment="CENTER" VBox.vgrow="ALWAYS">

                    <!-- Define column constraints for equal width -->
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="28" />
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="28" />
                    </columnConstraints>

                    <!-- Primary CTA -->
                    <VBox alignment="CENTER"  GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Button text="Start Learning Today" fx:id="landingHeroSignupBtn" styleClass="btn-primary"/>
                    </VBox>

                    <VBox alignment="CENTER"   GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Button text="Already have an account?" fx:id="landingHeroLoginBtn" styleClass="btn-secondary"/>
                    </VBox>
                </GridPane>
            </VBox>

            <!-- Feature Grid -->
            <GridPane alignment="CENTER" hgap="20" vgap="20" VBox.vgrow="ALWAYS">
                <!-- Define column constraints for equal width -->
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="28" />
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="28" />
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="28" />
                </columnConstraints>

                <!-- Feature Card 1 -->
                <VBox styleClass="feature-card" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                    <Label text="ðŸŽ¥" style="-fx-font-size: 56px;" />
                    <Label text="Interactive Learning" styleClass="section-title" style="-fx-font-size: 24px;" />
                    <Label text="Hands-on practice with real-time feedback to help you master sign language effectively through engaging exercises and demonstrations"
                           styleClass="body-text" wrapText="true" textAlignment="CENTER" GridPane.hgrow="ALWAYS" />
                </VBox>

                <!-- Feature Card 2 -->
                <VBox styleClass="feature-card" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                    <Label text="ðŸ§ " style="-fx-font-size: 56px;" />
                    <Label text="Video Lessons" styleClass="section-title" style="-fx-font-size: 24px;" />
                    <Label text="High-quality lessons with crystal-clear demonstrations and professional production values from experienced instructors"
                           styleClass="body-text" wrapText="true" textAlignment="CENTER" GridPane.hgrow="ALWAYS" />
                </VBox>

                <!-- Feature Card 3 -->
                <VBox styleClass="feature-card" alignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                    <Label text="ðŸ“Š" style="-fx-font-size: 56px;" />
                    <Label text="Track Progress" styleClass="section-title" style="-fx-font-size: 24px;" />
                    <Label text="Monitor your learning journey with detailed analytics and personalized recommendations that adapt to your learning style"
                           styleClass="body-text" wrapText="true" textAlignment="CENTER" GridPane.hgrow="ALWAYS" />
                </VBox>
            </GridPane>

        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <VBox styleClass="footer" alignment="CENTER" spacing="8" maxHeight="50" minHeight="45">
            <!-- Top level: Tagline and Sign In Link -->
            <HBox alignment="CENTER">
                <Label text="Learn Sign Language with Ease" styleClass="footer-text" style="-fx-font-size: 10px;"/>
            </HBox>
            <!-- Bottom level: Copyright -->
            <HBox alignment="CENTER">
                <Label text="Â© 2025 SignLearn. All rights reserved." styleClass="footer-text,footer-copyright" style="-fx-font-size: 8px;"/>
