<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.signlearn.presentation.controller.LandingController"
            stylesheets="@../css/styles.css"
            styleClass="root">

    <!-- Navigation Bar -->
    <top>
        <HBox styleClass="nav-bar" alignment="CENTER" spacing="30" fillHeight="false">
            <!-- Logo on the left -->
            <Label text="ðŸ¤Ÿ SignLearn" styleClass="nav-title"/>

            <!-- Flexible space to balance the layout -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- Main navigation buttons (centered) -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="Home" styleClass="nav-button,active"/>
                <Button text="About" fx:id="aboutBtn" styleClass="nav-button"/>
                <Button text="Contact" fx:id="contactBtn" styleClass="nav-button"/>
            </HBox>

            <!-- Flexible space to push Login/Sign Up to the right -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- Login and Sign Up buttons (right-aligned, grouped) -->
            <HBox styleClass="auth-buttons" spacing="10" alignment="CENTER_RIGHT">
                <Button text="Login" fx:id="loginBtn" styleClass="auth-button,login-button"/>
                <Button text="Sign Up" fx:id="signupBtn" styleClass="auth-button,signup-button"/>
            </HBox>
        </HBox>
    </top>

    <!-- Main Content - Full Screen -->
    <center>
        <VBox styleClass="content-area,spacing-large" alignment="CENTER" VBox.vgrow="ALWAYS">

            <!-- Hero Section -->
            <VBox spacing="32" alignment="CENTER" VBox.vgrow="ALWAYS">
