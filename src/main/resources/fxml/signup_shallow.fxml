<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.signlearn.presentation.controller.SignUpShallowController"
            stylesheets="@../css/styles.css"
            styleClass="main-container">

    <!-- Top Navigation -->
    <top>
        <HBox styleClass="nav-bar" alignment="CENTER_LEFT" spacing="30">
            <padding>
                <Insets top="12" right="24" bottom="12" left="24"/>
            </padding>

            <Button fx:id="backBtn" text="← Back" styleClass="nav-button"
                    style="-fx-background-color: rgba(99, 102, 241, 0.1); -fx-text-fill: #6366f1; -fx-padding: 8 16; -fx-background-radius: 8;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Label text="Sign up Page" style="-fx-font-size: 32px; -fx-font-weight: 800; -fx-text-fill: #1e293b;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="logoLabel" text="🤟 SignLearn" styleClass="nav-title"
                   style="-fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox alignment="CENTER" spacing="28" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="20" right="32" bottom="20" left="32"/>
            </padding>

            <!-- Vertical Spacer -->
            <Region style="-fx-max-height: 10;"/>

            <!-- Welcome Header -->
            <VBox spacing="8" alignment="CENTER" maxWidth="600">
                <Label text="Join SignLearn"
                       style="-fx-font-size: 32px; -fx-font-weight: 800; -fx-text-fill: #1e293b;"/>
                <Label text="Step 1 of 2 - Let's start creating your account"
                       alignment="CENTER"
                       style="-fx-font-size: 15px; -fx-text-fill: #64748b;"
                       maxWidth="450"/>
            </VBox>

            <!-- Progress Indicator -->
            <HBox spacing="16" alignment="CENTER" maxWidth="320">
                <VBox spacing="8" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Region style="-fx-background-color: #6366f1; -fx-background-radius: 4;" prefHeight="6" maxWidth="140"/>
                    <Label text="Email Setup"
                           style="-fx-font-size: 12px; -fx-text-fill: #6366f1; -fx-font-weight: 600;"/>
                </VBox>
                <Region style="-fx-background-color: #e2e8f0; -fx-min-width: 24; -fx-pref-height: 2;"/>
                <VBox spacing="8" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Region style="-fx-background-color: #e2e8f0; -fx-background-radius: 4;" prefHeight="6" maxWidth="140"/>
                    <Label text="Setup Profile"
                           style="-fx-font-size: 12px; -fx-text-fill: #9ca3af; -fx-font-weight: 500;"/>
                </VBox>
            </HBox>

            <!-- Signup Form Container -->
            <VBox alignment="CENTER">
                <VBox spacing="24" alignment="CENTER" styleClass="feature-card"
                      style="-fx-padding: 32; -fx-max-width: 420; -fx-min-width: 380;">

                    <!-- Email Field -->
                    <VBox spacing="6" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                        <Label text="Email Address"
                               style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #374151;"/>
                        <TextField fx:id="emailField"
                                   promptText="Enter your email address"
                                   styleClass="form-field"
                                   style="-fx-pref-height: 44; -fx-font-size: 14px; -fx-padding: 12 16;"/>
                    </VBox>

                    <!-- Error/Message Display -->
                    <Label fx:id="messageLabel"
                           style="-fx-text-fill: #ef4444; -fx-font-size: 12px; -fx-font-weight: 500;"
                           visible="false" managed="false"/>

                    <!-- Vertical Spacer -->
                    <Region style="-fx-min-height: 8;"/>

                    <!-- Continue Button -->
                    <Button fx:id="continueBtn"
                            text="Continue to Profile Setup →"
                            styleClass="btn-primary"
                            defaultButton="true"
                            style="-fx-pref-height: 44; -fx-font-size: 15px; -fx-font-weight: 600; -fx-background-color: #6366f1; -fx-text-fill: white; -fx-background-radius: 8; -fx-pref-width: 356;"/>

                    <!-- Vertical Spacer -->
                    <Region style="-fx-min-height: 8;"/>

                    <!-- Divider -->
                    <Separator style="-fx-background-color: #e2e8f0; -fx-pref-width: 356;"/>

                    <!-- Vertical Spacer -->
                    <Region style="-fx-min-height: 4;"/>

                    <!-- Sign In Link -->
                    <HBox spacing="8" alignment="CENTER">
                        <Label text="Already have an account?"
                               style="-fx-font-size: 13px; -fx-text-fill: #64748b;"/>
                        <Label fx:id="loginLabel" text="Login here"
                               style="-fx-text-fill: #6366f1; -fx-font-size: 13px; -fx-cursor: hand; -fx-underline: true; -fx-font-weight: 500;"/>
                    </HBox>
                </VBox>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <VBox styleClass="footer" alignment="CENTER" spacing="6"
              style="-fx-background-color: #f8fafc; -fx-padding: 16 0; -fx-border-color: #e2e8f0; -fx-border-width: 1 0 0 0;">
            <Label text="Learn Sign Language with Ease"
                   style="-fx-font-size: 11px; -fx-text-fill: #64748b; -fx-font-weight: 500;"/>
            <Label text="© 2025 SignLearn. All rights reserved."
                   style="-fx-font-size: 9px; -fx-text-fill: #9ca3af;"/>
        </VBox>
    </bottom>
</BorderPane>