<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.signlearn.presentation.controller.SignUpShallowController"
            stylesheets="@../css/styles.css"
            styleClass="main-container">

    <!-- Navigation Bar -->
    <top>
        <HBox styleClass="nav-bar" alignment="CENTER_LEFT" spacing="30">
            <Label text="ðŸ¤Ÿ SignLearn" styleClass="nav-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox spacing="20" alignment="CENTER_RIGHT">
                <Button text="Home" fx:id="backBtn" styleClass="nav-button"/>
                <Button text="About" fx:id="shallowAboutBtn" styleClass="nav-button"/>
                <Button text="Contact" fx:id="shallowContactBtn" styleClass="nav-button"/>
                <Button text="Login" fx:id="shallowLoginBtn" styleClass="nav-button"/>
                <Button text="Sign Up" styleClass="nav-button,active"/>
            </HBox>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox styleClass="content-area,spacing-large" alignment="CENTER" VBox.vgrow="ALWAYS">

            <!-- Header -->
            <VBox spacing="20" alignment="CENTER">
                <Label text="Join SignLearn" styleClass="page-title"/>
                <Label text="Step 1 of 2 - Let's start with your email address"
                       styleClass="subtitle" textAlignment="CENTER" maxWidth="720"/>
            </VBox>

            <!-- Progress Indicator -->
            <VBox styleClass="stats-section" spacing="16" alignment="CENTER" maxWidth="360">
                <HBox spacing="32" alignment="CENTER" prefWidth="360">
                    <VBox spacing="8" alignment="CENTER" prefWidth="162">
                        <Region styleClass="progress-indicator" prefWidth="162" prefHeight="8"/>
                        <Label text="Email Setup" style="-fx-font-size: 14px; -fx-text-fill: #667eea; -fx-font-weight: 600;"/>
                    </VBox>
                    <Region style="-fx-background-color: rgba(0, 0, 0, 0.1);" prefWidth="36" prefHeight="2"/>
                    <VBox spacing="8" alignment="CENTER" prefWidth="162">
                        <Region styleClass="progress-inactive" prefWidth="162" prefHeight="8"/>
                        <Label text="Profile Details" style="-fx-font-size: 14px; -fx-text-fill: #64748b; -fx-font-weight: 500;"/>
                    </VBox>
                </HBox>
            </VBox>

            <!-- Form Section -->
            <VBox styleClass="feature-card" spacing="32" alignment="CENTER" maxWidth="720" minWidth="500">

                <!-- Email Input -->
                <VBox spacing="16" alignment="CENTER" prefWidth="720">
                    <Label text="Email Address" styleClass="form-label" style="-fx-font-size: 18px;"/>
                    <TextField fx:id="emailField"
                               promptText="Enter your email address"
                               styleClass="form-field"
                               prefWidth="720"
                               style="-fx-font-size: 16px; -fx-padding: 18 24;"/>
                    <Label text="We'll use this to send you important updates about your learning progress and new features"
                           style="-fx-font-size: 14px; -fx-text-fill: #64748b; -fx-text-alignment: center; -fx-font-weight: 500;"
                           textAlignment="CENTER"
                           wrapText="true"/>
                </VBox>

                <!-- Message Display -->
                <Label fx:id="messageLabel"
                       wrapText="true"
                       textAlignment="CENTER"
                       style="-fx-min-height: 40px;"
                       prefWidth="648"/>

                <!-- Action Buttons -->
                <VBox spacing="24" alignment="CENTER" prefWidth="720">
                    <Button fx:id="continueBtn"
                            text="Continue to Profile Setup â†’"
                            styleClass="btn-primary"
                            prefWidth="720"
                            style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-padding: 20 36;"
                            defaultButton="true"/>

                    <HBox spacing="8" alignment="CENTER">
                        <Label text="Already have an account?" styleClass="body-text" style="-fx-font-size: 16px;"/>
                        <Button text="Sign in here"
                                fx:id="shallowSigninBtn"
                                style="-fx-text-fill: #667eea; -fx-cursor: hand; -fx-underline: true; -fx-background-color: transparent; -fx-border-width: 0;"/>
                    </HBox>
                </VBox>

            </VBox>

        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox styleClass="footer" alignment="CENTER">
            <Label text="Â© 2025 SignLearn - Empowering communication through sign language education" styleClass="footer-text"/>
        </HBox>
    </bottom>

</BorderPane>