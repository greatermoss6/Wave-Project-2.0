            <HBox spacing="20" alignment="CENTER_RIGHT">
                <Button text="Home" fx:id="landingBtn" styleClass="nav-button"/>
                <Button text="About" fx:id="aboutBtn" styleClass="nav-button"/>
                <Button text="Contact" styleClass="nav-button,active"/>
                <Button text="Login" fx:id="loginBtn" styleClass="nav-button"/>
                <Button text="Sign Up" fx:id="signupBtn" styleClass="nav-button"/>
            </HBox>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
            <VBox styleClass="content-area,spacing-large" alignment="TOP_CENTER">

                <!-- Header -->
                <VBox spacing="20" alignment="CENTER">
                    <Label text="Get in Touch" styleClass="page-title"/>
                    <Label text="We're here to support you on your sign language learning journey. Reach out with questions, feedback, or just to say hello!"
                           styleClass="subtitle" textAlignment="CENTER" maxWidth="70%"/>
                </VBox>

                <!-- Contact Methods -->
                <GridPane hgap="5%" vgap="40" alignment="CENTER" prefWidth="80%">

                    <!-- Email Support -->
                    <VBox styleClass="feature-card" spacing="24" alignment="CENTER" prefWidth="45%" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="ðŸ“§" style="-fx-font-size: 56px;"/>
                        <Label text="Email Support" styleClass="section-title" style="-fx-font-size: 28px;"/>
                        <VBox spacing="16" alignment="CENTER">
                            <Label text="support@signlearn.com"
                                   style="-fx-font-size: 20px; -fx-font-weight: 600; -fx-text-fill: #667eea;"/>
                            <Label text="General questions, technical support, and learning assistance"
                                   styleClass="body-text" textAlignment="CENTER" wrapText="true"/>
                            <Label text="Average response time: 12-24 hours"
                                   style="-fx-font-size: 14px; -fx-text-fill: #64748b; -fx-font-weight: 500;"/>
                        </VBox>
                    </VBox>

                    <!-- Live Chat -->
                    <VBox styleClass="feature-card" spacing="24" alignment="CENTER" prefWidth="45%" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="ðŸ’¬" style="-fx-font-size: 56px;"/>
                        <Label text="Live Chat Support" styleClass="section-title" style="-fx-font-size: 28px;"/>
                        <VBox spacing="16" alignment="CENTER">
                            <Label text="Monday - Friday"
                                   style="-fx-font-size: 20px; -fx-font-weight: 600; -fx-text-fill: #667eea;"/>
                            <Label text="9:00 AM - 7:00 PM EST"
                                   styleClass="body-text" textAlignment="CENTER"/>
                            <Label text="Instant help for urgent questions and technical issues"
                                   style="-fx-font-size: 14px; -fx-text-fill: #64748b; -fx-font-weight: 500;" textAlignment="CENTER" wrapText="true"/>
                        </VBox>
                    </VBox>

                </GridPane>

                <!-- FAQ Section -->
                <VBox spacing="32" alignment="CENTER" maxWidth="90%">
                    <Label text="Frequently Asked Questions" styleClass="section-title"/>

                    <VBox spacing="24" maxWidth="100%">
                        <VBox styleClass="feature-card" spacing="16">
                            <Label text="Q: How do I reset my password?"
                                   style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-text-fill: #1e293b;"/>
                            <Label text="A: Click 'Forgot Password' on the login page and follow the email instructions. If you don't receive the email within 10 minutes, check your spam folder or contact support."
                                   styleClass="body-text" wrapText="true"/>
                        </VBox>

                        <VBox styleClass="feature-card" spacing="16">
                            <Label text="Q: Can I download lessons for offline viewing?"
                                   style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-text-fill: #1e293b;"/>
                            <Label text="A: While our lessons currently require an internet connection for the best interactive experience, we're developing offline capabilities that will be available in our upcoming mobile app launch."
                                   styleClass="body-text" wrapText="true"/>
                        </VBox>

                        <VBox styleClass="feature-card" spacing="16">
                            <Label text="Q: How long does it take to complete a module?"
                                   style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-text-fill: #1e293b;"/>
                            <Label text="A: Most modules take 2-4 hours to complete, including video lessons and practice exercises. However, our adaptive learning system allows you to learn at your own pace for optimal retention."
                                   styleClass="body-text" wrapText="true"/>
                        </VBox>

                        <VBox styleClass="feature-card" spacing="16">
                            <Label text="Q: Do you offer certificates upon completion?"
                                   style="-fx-font-size: 18px; -fx-font-weight: 600; -fx-text-fill: #1e293b;"/>
                            <Label text="A: Yes! We provide digital certificates of completion for each module and a comprehensive certificate when you finish an entire course pathway. These are recognized by many educational institutions."
                                   styleClass="body-text" wrapText="true"/>
                        </VBox>
                    </VBox>
                </VBox>

                <!-- Get In Touch Section -->
                <VBox styleClass="info-section" spacing="20" alignment="CENTER" maxWidth="70%">
                    <Label text="Have More Questions?" styleClass="section-title"/>
                    <Label text="For detailed inquiries about our courses, accessibility features, or partnership opportunities, please email us directly at support@signlearn.com. Our dedicated team is committed to helping you succeed in your sign language learning journey and fostering inclusive communication."
                           styleClass="body-text" wrapText="true" textAlignment="CENTER"/>
                </VBox>

                <!-- CTA Section -->
                <HBox spacing="24" alignment="CENTER">
                    <Button text="Start Learning Today" fx:id="contactSignupBtn" styleClass="btn-primary"/>
                    <Button text="Learn More About Us" fx:id="contactAboutBtn" styleClass="btn-secondary"/>
                </HBox>

            </VBox>
        </ScrollPane>
    </center>

