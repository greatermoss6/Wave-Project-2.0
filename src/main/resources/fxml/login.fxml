<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.signlearn.presentation.controller.LoginController"
            stylesheets="@../css/styles.css"
            styleClass="main-container">

    <!-- Navigation Bar -->
    <top>
        <HBox styleClass="nav-bar" alignment="CENTER_LEFT" spacing="30">
            <Label text="ðŸ¤Ÿ SignLearn" styleClass="nav-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox spacing="20" alignment="CENTER_RIGHT">
                <Button text="Home" fx:id="backBtn" styleClass="nav-button"/>
                <Button text="About" fx:id="loginAboutBtn" styleClass="nav-button"/>
                <Button text="Contact" fx:id="loginContactBtn" styleClass="nav-button"/>
                <Button text="Login" styleClass="nav-button,active"/>
                <Button text="Sign Up" fx:id="loginNavSignupBtn" styleClass="nav-button"/>
            </HBox>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox styleClass="content-area,spacing-large" alignment="CENTER" VBox.vgrow="ALWAYS">

            <!-- Header -->
            <VBox spacing="20" alignment="CENTER">
                <Label text="Welcome Back" styleClass="page-title"/>
                <Label text="Sign in to continue your learning journey and unlock your potential"
                       styleClass="subtitle" textAlignment="CENTER" maxWidth="60%"/>
            </VBox>

            <!-- Login Form Card -->
            <VBox styleClass="feature-card" spacing="32" alignment="CENTER" maxWidth="50%" minWidth="400">

                <!-- Email Field -->
                <VBox spacing="12" alignment="CENTER_LEFT" prefWidth="100%">
                    <Label text="Email Address" styleClass="form-label"/>
                    <TextField fx:id="emailField"
                               promptText="Enter your email address"
                               styleClass="form-field"
                               prefWidth="100%"/>
                </VBox>

                <!-- Password Field -->
                <VBox spacing="12" alignment="CENTER_LEFT" prefWidth="100%">
                    <Label text="Password" styleClass="form-label"/>
                    <PasswordField fx:id="passwordField"
                                   promptText="Enter your password"
                                   styleClass="form-field"
                                   prefWidth="100%"/>
                </VBox>

                <!-- Message Display -->
                <Label fx:id="messageLabel"
                       wrapText="true"
                       textAlignment="CENTER"
                       style="-fx-min-height: 30px;"
                       prefWidth="90%"/>

                <!-- Login Button -->
                <Button fx:id="loginBtn"
                        text="Sign In to Dashboard"
                        styleClass="btn-primary"
                        prefWidth="100%"
                        style="-fx-font-size: 18px; -fx-padding: 20 36;"
                        defaultButton="true"/>

            </VBox>

            <!-- Divider -->
            <VBox spacing="20" alignment="CENTER">
                <Separator maxWidth="50%" style="-fx-background-color: rgba(0, 0, 0, 0.1);"/>
                <Label text="Don't have an account yet?" styleClass="body-text" style="-fx-font-size: 18px;"/>
            </VBox>

            <!-- Sign Up Section -->
            <VBox spacing="20" alignment="CENTER">
                <Button fx:id="signupBtn"
                        text="Create New Account"
                        styleClass="btn-secondary"
                        style="-fx-font-size: 18px; -fx-padding: 18 36;"
                        prefWidth="30%"
                        minWidth="300"/>

                <Label text="Join thousands of learners mastering sign language worldwide"
                       style="-fx-font-size: 15px; -fx-text-fill: #64748b; -fx-text-alignment: center; -fx-font-weight: 500;"
                       textAlignment="CENTER"
                       wrapText="true"
                       maxWidth="50%"/>
            </VBox>

        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox styleClass="footer" alignment="CENTER">
            <Label text="Â© 2025 SignLearn - Empowering communication through sign language education" styleClass="footer-text"/>
        </HBox>
    </bottom>

</BorderPane>